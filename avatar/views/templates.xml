                                                    <div class="pt-1 fa fa-2x fa-hourglass-3"/>
                                                    <div>
                                                    <h7>عروض الأسعار</h7>
                                                    </div>
                                                </a>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <t t-raw="0"/>
                    </t>
                </div>
            </div>
        </xpath>
        </template>

